<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/topbox"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        ></Spinner>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbox"
        android:background="#000000"
        android:id="@+id/table"
        android:stretchColumns="0,1,"
        >

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문화어"
                android:textColor="#ffffff"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="표준어"
                android:textColor="#ffffff"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="즐겨찾기"
                android:textColor="#ffffff"
                android:gravity="left"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="암기"
                android:textColor="#ffffff"
                />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/lvContact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/table"
        android:background="#000000"
        android:divider="#000000"
        android:dividerHeight="4dp">
    </ListView>

    <TextView
        android:id="@+id/btncover"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/lvContact"
        android:background="#000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/but1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="left|bottom"
            android:layout_weight="1"
            android:text="문화어 숨기기" />

        <Button
            android:id="@+id/but2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="표준어 숨기기" />


        <Button
            android:id="@+id/but3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right|bottom"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/hide"
        android:layout_width="136dp"
        android:layout_height="476dp"
        android:layout_above="@+id/btncover"
        android:layout_below="@+id/table"
        android:layout_alignParentLeft="@+id/lvContact"
        android:layout_marginBottom="1dp"
        android:background="#000000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/hide2"
        android:layout_width="138dp"
        android:layout_height="476dp"
        android:layout_above="@+id/btncover"
        android:layout_below="@+id/table"
        android:layout_alignRight="@+id/lvContact"
        android:layout_marginTop="2dp"
        android:layout_marginRight="106dp"
        android:background="#000000"
        android:visibility="invisible" />
</RelativeLayout>