<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:layout_margin="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="REVIEW"
        android:textSize="25dp"
        android:layout_weight="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/test_review_item"
        android:weightSum="10">

        <TextView
            android:id="@+id/review_num"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="번호"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/review_north"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:gravity="center"
            android:padding="0dp"
            android:text="북한어"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/review_south"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:gravity="center"
            android:textStyle="bold"
            android:text="남한어"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/review_memory"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/test_resize_memo"/>

        <ImageView
            android:id="@+id/review_bookmark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/test_resize_star_full"/>

    </LinearLayout>

    <ListView
        android:id="@+id/custom_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="85"/>
</LinearLayout>