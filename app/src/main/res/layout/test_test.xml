<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:layout_margin="16dp"
    android:weightSum="100">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="35">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"

                android:text="Problems"
                android:textSize="64dp"
                android:gravity="center"
                android:id="@+id/test_problems"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/test_all_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="20 / 20"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/test_correct_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="맞은 개수 : 13"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/correct_symbol"
            android:id="@+id/test_correct_symbol"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/uncorrect_symbol"
            android:id="@+id/test_uncorrect_symbol"
            android:visibility="invisible" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="20">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"

                android:layout_weight="10"
                android:weightSum="20">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:layout_margin="5dp"

                    android:text="Ans1"
                    android:textSize="25dp"
                    android:id="@+id/test_ans1"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:layout_margin="5dp"

                    android:text="Ans2"
                    android:textSize="25dp"
                    android:id="@+id/test_ans2"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"

                android:orientation="horizontal"
                android:weightSum="20">


                <Button
                    android:id="@+id/test_ans3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"

                    android:layout_weight="10"
                    android:text="Ans3"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/test_ans4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"

                    android:layout_weight="10"
                    android:text="Ans4"
                    android:textSize="25dp"/>
            </TableRow>
        </TableLayout>

        <ImageButton
            android:id="@+id/test_nextBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/shape_circle"
            android:src="@drawable/next_button"
            android:visibility="invisible"/>

    </FrameLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="15">

        <Button
            android:id="@+id/test_bookMark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/test_resize_star_full"
            android:layout_weight="5"
            android:layout_margin="10dp"

            android:text="즐겨찾기"
            android:textSize="20dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_margin="10dp"

            android:text="잘 모르겠어요"
            android:textSize="20dp"
            android:id="@+id/test_passBtn"/>
    </TableRow>
</LinearLayout>